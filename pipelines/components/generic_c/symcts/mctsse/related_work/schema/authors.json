{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "LASTNAME": {
      "type": "string",
      "minLength": 1
    },
    "FIRSTNAME": {
      "type": "string",
      "minLength": 1
    },
    "MIDDLENAMES": {
      "type": "string"
    },
    "AFFILIATION": {
      "oneOf": [
        {
          "$ref": "affiliations.json"
        },
        {
          "type": "array",
          "items": {
            "$ref": "affiliations.json"
          }
        }
      ]
    },
    "EMAIL": {
      "type": "string",
      "format": "email"
    }
  },
  "required": [
    "LASTNAME",
    "FIRSTNAME",
    "AFFILIATION"
  ],
  "additionalProperties": false
}
