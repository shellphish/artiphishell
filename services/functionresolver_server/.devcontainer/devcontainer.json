{
    "name": "Function Resolver Server Dev Container",
    "build": {
      "dockerfile": "../Dockerfile",
      "context": "../",
      "args": {
        "IMAGE_PREFIX": "",
        "SOURCE_REPO": "https://github.com/shellphish-support-syndicate/artiphishell"
      }
    },
    "workspaceMount": "source=${localWorkspaceFolder}/,target=/app/functionresolver_server,type=bind,consistency=cached",
    "workspaceFolder": "/app/functionresolver_server",
    "mounts": [
      "source=${localWorkspaceFolder}/../../libs/,target=/shellphish/libs/,type=bind,consistency=cached",
      "source=/aixcc-backups/,target=/aixcc-backups,type=bind,consistency=cached",
      "source=/shared/,target=/shared,type=bind,consistency=cached",
    ],
    "customizations": {
      "env": {
        // "LITELLM_KEY": "$LITELLM_KEY",
        // "AIXCC_LITELLM_HOSTNAME": "$AIXCC_LITELLM_HOSTNAME",
        // "USE_LLM_API": "false"
      },
      "vscode": {
        "extensions": [
          "github.copilot", 
          "ms-azuretools.vscode-docker",
          "ms-vscode.vscode-remote-extensionpack",
          "ms-python.python"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      }
    },
    "forwardPorts": [
      8050, 
      8080
    ]
  }