{
  "name": "Java Harness Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "../"
  },
  "workspaceMount": "source=${localWorkspaceFolder}/,target=/harness/,type=bind,consistency=cached",
  "workspaceFolder": "/harness/",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=/tmp/,target=/tmp/,type=bind"
  ],
  "customizations": {
    "env": {
      // "LITELLM_KEY": "$LITELLM_KEY",
      // "AIXCC_LITELLM_HOSTNAME": "$AIXCC_LITELLM_HOSTNAME",
      // "USE_LLM_API": "false"
    },
    "vscode": {
      "extensions": [
        "github.copilot", 
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-remote-extensionpack",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}