{
    "name": "Kumushi Dev Container",
    "build": {
      "dockerfile": "../Dockerfile",
      "context": "../",
      "args": {
        "IMAGE_PREFIX": "ghcr.io/shellphish-support-syndicate/",
        "SOURCE_REPO": "https://github.com/shellphish-support-syndicate/artiphishell"
      }
    },
    "workspaceMount": "source=${localWorkspaceFolder}/,target=/kumushi/,type=bind,consistency=consistency",
    "workspaceFolder": "/kumushi/",
   "runArgs": [
        "--add-host=localhost:host-gateway",
        "--privileged",
        // This makes localhost point to the host machine
      ],
    "mounts": [
      "source=${localEnv:HOME}/.git-credentials,target=/root/.git-credentials,type=bind,consistency=cached",
      "source=${localWorkspaceFolder}/../../libs/,target=/shellphish/libs/,type=bind,consistency=consistency",
      "source=/aixcc-backups/,target=/aixcc-backups,type=bind,consistency=consistency",
      "source=/shared/,target=/shared,type=bind,consistency=consistency",
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "customizations": {
      "env": {
        // "LITELLM_KEY": "$LITELLM_KEY",
        // "AIXCC_LITELLM_HOSTNAME": "$AIXCC_LITELLM_HOSTNAME",
        // "USE_LLM_API": "false"
      },
      "vscode": {
        "extensions": [
          "github.copilot", 
          "ms-azuretools.vscode-docker",
          "ms-vscode.vscode-remote-extensionpack",
          "ms-python.python"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      }
    },
    "forwardPorts": [
      8050, 
      8080
    ],
  "postCreateCommand": "bash -c 'pip install -e /shellphish/libs/crs-utils && pip install -e /shellphish/libs/libcodeql'"

  }