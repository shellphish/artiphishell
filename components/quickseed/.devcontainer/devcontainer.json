{
  "name": "QuickSeed Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "../"
  },
  "workspaceMount": "source=${localWorkspaceFolder}/,target=/quickseed/,type=bind,consistency=consistency",
  "workspaceFolder": "/quickseed/",
  "runArgs": [
    "--add-host=localhost:host-gateway"  // This makes localhost point to the host machine
  ],
  "mounts": [
    "source=/home/${localEnv:USER}/.git-credentials,target=/home/vscode/.git-credentials,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/../../libs/,target=/shellphish/libs/,type=bind,consistency=consistency",
    "source=/aixcc-backups/,target=/aixcc-backups,type=bind,consistency=consistency",
    "source=/shared/,target=/shared,type=bind,consistency=consistency",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "env": {
       "LITELLM_KEY": "$LITELLM_KEY",
       "AIXCC_LITELLM_HOSTNAME": "$AIXCC_LITELLM_HOSTNAME",
       "USE_LLM_API": "True"
    },
    "vscode": {
      "extensions": [
        "github.copilot", 
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-remote-extensionpack",
        "ms-python.python",
        "ms-python.vscode-pylance",
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}