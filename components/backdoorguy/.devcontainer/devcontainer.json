{
    "name": "BackdoorGuy Dev Container",
    "build": {
      "dockerfile": "../Dockerfile",
      "context": "../",
      "args": {
        "IMAGE_PREFIX": "ghcr.io/shellphish-support-syndicate/",
        "SOURCE_REPO": "https://github.com/shellphish-support-syndicate/artiphishell"
      }
    },
    "workspaceMount": "source=${localWorkspaceFolder}/src,target=/src,type=bind,consistency=cached",
    "workspaceFolder": "/src",
    "mounts": [
      "source=${localWorkspaceFolder}/../../services/,target=${localWorkspaceFolder}/../../services/,type=bind,consistency=cached",
      "source=${localWorkspaceFolder}/../../libs/,target=/shellphish/libs/,type=bind,consistency=cached",
      "source=/aixcc-backups/,target=/aixcc-backups,type=bind,consistency=cached",
      "source=/shared/,target=/shared,type=bind,consistency=cached",
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "containerEnv": {
      "SERVICE_FOLDER_COMMAND": "echo $(dirname $(dirname ${localWorkspaceFolder}))/services"
    },
    "customizations": {
      "env": {
        "AIXCC_LITELLM_HOSTNAME": "'http://wiseau.seclab.cs.ucsb.edu:4000'",
        "LITELLM_KEY": "sk-artiphishell"
      },
      "vscode": {
        "extensions": [
          "github.copilot", 
          "ms-azuretools.vscode-docker",
          "ms-vscode.vscode-remote-extensionpack",
          "ms-python.python"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      }
    }
  }